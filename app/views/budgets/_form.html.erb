<%= form_for(@budget, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @budget.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@budget.errors.count, "error") %> prohibited this budget from being saved:</h4>

      <ul>
      <% @budget.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :text, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :published, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agreed_on, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :agreed_on, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agreed_protocol_link, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :agreed_protocol_link, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
