<div class="page-header">
  <%= link_to new_budget_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Budget
  <% end %>
  <h1>Listing budgets</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Text</th>
            <th>Published</th>
            <th>Agreed on</th>
            <th>Agreed protocol link</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @budgets) do |budget| %>
            <td><%= budget.name %></td>
            <td><%= budget.text %></td>
            <td><%= budget.published %></td>
            <td><%= budget.agreed_on %></td>
            <td><%= budget.agreed_protocol_link %></td>
            <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
