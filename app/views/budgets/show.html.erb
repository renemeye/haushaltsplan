<div class="page-header">
  <%= link_to budgets_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_budget_path(@budget), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show budget</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @budget.name %></dd>

  <dt>Text:</dt>
  <dd><%= @budget.text %></dd>

  <dt>Published:</dt>
  <dd><%= @budget.published %></dd>

  <dt>Agreed on:</dt>
  <dd><%= @budget.agreed_on %></dd>

  <dt>Agreed protocol link:</dt>
  <dd><%= @budget.agreed_protocol_link %></dd>

</dl>

<%= render 'budget_entries/list'%>
