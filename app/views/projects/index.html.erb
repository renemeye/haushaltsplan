<div class="page-header">
  <%= link_to new_project_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Project
  <% end %>
  <h1>Listing projects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Contact person</th>
            <th>Contact telephone no</th>
            <th>Contact e mail address</th>
            <th>Decision protocol link</th>
            <th>Decision value</th>
            <th>Comment</th>
            <th>Decision date</th>
            <th>Budget entry</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
            <td><%= project.name %></td>
            <td><%= project.contact_person %></td>
            <td><%= project.contact_telephone_no %></td>
            <td><%= project.contact_e_mail_address %></td>
            <td><%= project.decision_protocol_link %></td>
            <td><%= project.decision_value %></td>
            <td><%= project.comment %></td>
            <td><%= project.decision_date %></td>
            <td><%= project.budget_entry_id %></td>
            <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
